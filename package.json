{
  "name": "withoutlaw",
  "version": "2.0.0",
  "type": "module",
  "description": "Проект «КАПЕЛЬКА»",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig & npm run stylelint & eslint source/js/",
    "build": "cross-env NODE_ENV=production gulp build",
    "dev": "cross-env NODE_ENV=production gulp dev",
    "start": "cross-env NODE_ENV=development gulp start",
    "webp": "gulp webp",
    "imagemin": "gulp imagemin",
    "deploy": "gulp build && gh-pages -d build"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.20.2",
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "10.4.13",
    "babel-loader": "9.1.2",
    "browser-sync": "2.27.11",
    "circular-dependency-plugin": "5.2.2",
    "clean-webpack-plugin": "4.0.0",
    "cross-env": "7.0.3",
    "del": "^6.1.1",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint": "8.32.0",
    "gh-pages": "^4.0.0",
    "gulp": "4.0.2",
    "gulp-csso": "4.0.1",
    "gulp-group-css-media-queries": "1.2.2",
    "gulp-imagemin": "8.0.0",
    "gulp-postcss": "9.0.1",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.1.0",
    "gulp-svgstore": "9.0.0",
    "gulp-webp": "4.0.1",
    "imagemin-mozjpeg": "10.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "10.0.1",
    "postcss": "8.4.21",
    "sass": "1.57.1",
    "stylelint": "14.16.1",
    "webpack": "5.75.0",
    "webpack-stream": "7.0.0"
  },
  "engines": {
    "node": ">=16.15.1"
  }
}
